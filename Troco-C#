using System;
namespace Programa{
	class Program{
		static void Main(){
			int quant;
			double valor,preco,troco;
			Console.WriteLine("Qual o valor do produto");
			valor=double.Parse(Console.ReadLine());
			Console.WriteLine("Qual a quantidade pega desse produto");
			quant=int.Parse(Console.ReadLine());
			preco = valor * quant;
			Console.WriteLine("O preço foi: ");
			Console.Write("Qual o valor dado pelo cliente: ");
			troco=valor-preco;
			if(valor<preco){
		Console.WriteLine("Então seu troco é: "+troco);
			}
			else if (valor==preco){
				Console.WriteLine("O valor está certinho");
			}
			else{
				Console.WriteLine("O valor é insuficiente");
			}
		}
	}
}
